<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package = "com.yourbro" />

    <bean id="telegramCatPictureBot" class="com.yourbro.bot.TelegramCatPictureBot">
        <property name="configurationService" ref="configurationService" />
    </bean>

    <bean id="configurationService" class="com.yourbro.configurationservice.ConfigurationService"/>
</beans>